<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Thứ 2"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txt1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius"
            android:hint="Value"
            android:inputType="number"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Thứ 3"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txt2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius"
            android:hint="Value"
            android:inputType="number"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Thứ 4"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txt3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius"
            android:hint="Value"
            android:inputType="number"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Thứ 5"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txt4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius"
            android:hint="Value"
            android:inputType="number"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Thứ 6"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txt5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius"
            android:hint="Value"
            android:inputType="number"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Thứ 7"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txt6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius"
            android:hint="Value"
            android:inputType="number"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Chủ nhật"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txt7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius"
            android:hint="Value"
            android:inputType="number"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDraw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:text="Draw BarChart"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDrawPie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:text="Draw PieChart"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>