<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RaceAnimal"
    android:background="@drawable/background">

    <CheckBox
        android:id="@+id/cb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/cb2"
        android:layout_marginBottom="50dp"
        android:button="@drawable/custom_checkbox"/>
    <CheckBox
        android:id="@+id/cb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/cb3"
        android:layout_marginBottom="50dp"
        android:button="@drawable/custom_checkbox"/>
    <CheckBox
        android:id="@+id/cb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:button="@drawable/custom_checkbox"/>
    
    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/sb3"
        android:thumb="@drawable/dog3"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/cb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/sb2"
        android:thumb="@drawable/dog2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cb2"
        android:layout_above="@id/sb3" />
    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sb1"
        android:thumb="@drawable/dog1"
        android:layout_toRightOf="@id/cb1"
        android:layout_above="@id/sb2" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/logo2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnPlay"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/play"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"/>
</RelativeLayout>